{
  "compilerOptions": {
    "strict": true,
    "checkJs": true
  },
  "tasks": {
    "generate": "deno run --allow-read --allow-write scripts/generate.js"
  },
  "include": [
    "./outlines/**/*.js"
  ],
  "test": {
    "include": [
      "./tests/**/*.js"
    ]
  },
  "imports": {
    "@/": "./src/",
    "@@/": "./tests/",
    "@std/expect": "jsr:@std/expect@^1.0.6",
    "@std/fs": "jsr:@std/fs@^1.0.4",
    "@std/path": "jsr:@std/path@^1.0.6",
    "@std/testing": "jsr:@std/testing@^1.0.3"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
